# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.py,*.rst,*.toml}]
indent_style = space
indent_size = 4

[{*.bat,*.cmd}]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[{*.md, *.markdown}]
trim_trailing_whitespace = false
